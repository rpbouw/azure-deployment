if [ $# != 1 ]; then
  echo "Usage: $0 vmNumber"
  exit 1
fi

vmNumber=$1
sed s/"\"vmNumber\": { \"value\": 1 }"/"\"vmNumber\": { \"value\": $vmNumber }"/g lazuredeploy-bebstub-node.parameters.json >lazuredeploy-bebstub-node.parameters.$vmNumber.json

azure account set RABO-D01-CloudDelivery
azure group deployment create --template-file azuredeploy-bebstub-node.json \
    -e lazuredeploy-bebstub-node.parameters.$vmNumber.json \
    -g RG-D01-APP-ONLINEDATASTORE-003 \
    -n BebstubNodeDeployment$vmNumber

rm lazuredeploy-bebstub-node.parameters.$vmNumber.json
