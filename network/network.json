{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "jumpboxPublicIPName": "jumpbox-pip",
    "jumpboxDomainLabelPrefix": "rabobankjb",
    "artifactsLocation": "https://raw.githubusercontent.com/rpbouw/azure-deployment/master/network/",
    
    "northEuropeAddressPrefix": "10.253.0.",
    "neLastOctetOffset": 0,
    "westEuropeAddressPrefix": "10.253.0.",
    "weLastOctetOffset": 64,

    "vnetAddressPrefixNE": "[concat(parameters('northEuropeAddressPrefix'),neLastOctetOffset,'/26')]",
    "BebSubnetAddressPrefixNE": "[concat(parameters('northEuropeAddressPrefix'),neLastOctetOffset,'/29')]",
    "CassandraSubnetAddressPrefixNE": "[concat(parameters('northEuropeAddressPrefix'),add(neLastOctetOffset,8),'/29')]",
    "ElasticsearchSubnetAddressPrefixNE": "[concat(parameters('northEuropeAddressPrefix'),add(neLastOctetOffset,16),'/29')]",
    "GlueSubnetAddressPrefixNE": "[concat(parameters('northEuropeAddressPrefix'),add(neLastOctetOffset,32),'/29')]",
    "JumpboxSubnetAddressPrefixNE": "[concat(parameters('northEuropeAddressPrefix'),add(neLastOctetOffset,40),'/29')]",
    "GatewaySubnetAddressPrefixNE": "[concat(parameters('northEuropeAddressPrefix'),add(neLastOctetOffset,56),'/29')]",

    "vnetAddressPrefixWE": "[concat(parameters('northEuropeAddressPrefix'),weLastOctetOffset,'/26')]",
    "BebSubnetAddressPrefixWE": "[concat(parameters('northEuropeAddressPrefix'),weLastOctetOffset,'/29')]",
    "CassandraSubnetAddressPrefixWE": "[concat(parameters('northEuropeAddressPrefix'),add(weLastOctetOffset,8),'/29')]",
    "ElasticsearchSubnetAddressPrefixWE": "[concat(parameters('northEuropeAddressPrefix'),add(weLastOctetOffset,16),'/29')]",
    "GlueSubnetAddressPrefixWE": "[concat(parameters('northEuropeAddressPrefix'),add(weLastOctetOffset,32),'/29')]",
    "JumpboxSubnetAddressPrefixWE": "[concat(parameters('northEuropeAddressPrefix'),add(weLastOctetOffset,40),'/29')]",
    "GatewaySubnetAddressPrefixWE": "[concat(parameters('northEuropeAddressPrefix'),add(weLastOctetOffset,56),'/29')]",

    "sharedKey": "osaidu2j2j2k33lk488dajsadndazxqw328909754jjkkdndckdkododjsjnqazxsfjngtb7363m"
  },
  "resources": [
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('jumpboxPublicIPName')]",
      "location": "westeurope",
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[variables('jumpboxDomainLabelPrefix')]"
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "vnet-westeurope-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocation'), 'vnet-template', '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "westeurope"
          },
          "addressPrefix": {
            "value": "[variables('westEuropeAddressPrefix')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "vnet-northeurope-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocation'), 'vnet-template', '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "northeurope"
          },
          "addressPrefix": {
            "value": "[variables('northEuropeAddressPrefix')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "vnet-gateway-westeurope-deployment",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": ["vnet-westeurope-deployment"],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocation'), 'vnet-gateway-template', '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "westeurope"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "vnet-gateway-northeurope-deployment",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": ["vnet-northeurope-deployment"],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocation'), 'vnet-gateway-template', '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "northeurope"
          }
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "name": "westeurope-to-northeurope-connection",
      "type": "Microsoft.Network/connections",
      "location": "westeurope",
      "dependsOn": [
        "vnet-gateway-westeurope-deployment",
        "vnet-gateway-northeurope-deployment"
      ],
      "properties": {
        "virtualNetworkGateway1": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', 'westeurope-vnetgateway')]"
        },
        "virtualNetworkGateway2": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', 'northeurope-vnetgateway')]"
        },
        "connectionType": "Vnet2Vnet",
        "routingWeight": 0,
        "sharedKey": "[variables('sharedKey')]"
      }
    },
    {
      "apiVersion": "2015-06-15",
      "name": "northeurope-to-westeurope-connection",
      "type": "Microsoft.Network/connections",
      "location": "northeurope",
      "dependsOn": [
        "vnet-gateway-westeurope-deployment",
        "vnet-gateway-northeurope-deployment"
      ],
      "properties": {
        "virtualNetworkGateway1": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', 'northeurope-vnetgateway')]"
        },
        "virtualNetworkGateway2": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', 'westeurope-vnetgateway')]"
        },
        "connectionType": "Vnet2Vnet",
        "routingWeight": 0,
        "sharedKey": "[variables('sharedKey')]"
      }
    }
  ]
}
