{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "artifactsLocation": "https://raw.githubusercontent.com/rpbouw/azure-deployment/master/network/"
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "connection-deployment",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "vnet-gateway-westeurope-deployment",
        "vnet-gateway-northeurope-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocation'), 'connection-template', '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {}
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "vnet-westeurope-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocation'), 'vnet-template', '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "westeurope"
          },
          "addressPrefix": {
            "value": "10.1.0."
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "vnet-northeurope-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocation'), 'vnet-template', '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "northeurope"
          },
          "addressPrefix": {
            "value": "10.2.0."
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "vnet-gateway-westeurope-deployment",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": ["vnet-westeurope-deployment"],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocation'), 'vnet-gateway-template', '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "westeurope"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "vnet-gateway-northeurope-deployment",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": ["vnet-northeurope-deployment"],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocation'), 'vnet-gateway-template', '.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "northeurope"
          }
        }
      }
    }
  ]
}
